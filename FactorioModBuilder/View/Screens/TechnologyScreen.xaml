<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="Technology_Template">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0" AutoGenerateColumns="False" Margin="5"
                      ItemsSource="{Binding Path=ItemList}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Technology" Width="*" Binding="{Binding Path=Name}"/>
                    <DataGridTextColumn Header="Order" Width="*" Binding="{Binding Path=Order}"/>
                    <DataGridTextColumn Header="Time" Width="*" Binding="{Binding Path=Time}"/>
                    <DataGridTextColumn Header="Count" Width="*" Binding="{Binding Path=Count}"/>
                    <DataGridTemplateColumn Header="Ingredients" Width="*">
                        
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Effects" Width="*">
                        
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>